{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake_Build",
            "type": "shell",
            "command": "/usr/bin/cmake --no-warn-unused-cli -DCMAKE_VERBOSE_MAKEFILE:BOOL=ON -DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE -DCMAKE_BUILD_TYPE:STRING=Debug -H${workspaceFolder} -B${workspaceFolder}/build \"-GUnix Makefiles\"",
            "group": "build",
            "presentation": 
            {
                "clear": true
            }
        },
        {
            "label": "CMake_Compile",
            "type": "shell",
            "dependsOn": "CMake_Build",
            "command": "/usr/bin/cmake --build ${workspaceFolder}/build --config Debug --target all -- -j 4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}